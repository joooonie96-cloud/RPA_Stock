name: Send Google Sheet to Telegram (KR weekdays)

on:
  schedule:
    # 월~금, 06:45 UTC = KST 15:45
    - cron: '45 6 * * 1-5'
  workflow_dispatch: {}

jobs:
  run:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install gspread google-auth holidays pandas requests

      - name: Run script
        env:
          BOT_TOKEN: ${{ secrets.BOT_TOKEN }}
          CHAT_ID: ${{ secrets.CHAT_ID }}
          GOOGLE_SERVICE_ACCOUNT_JSON: ${{ secrets.GOOGLE_SERVICE_ACCOUNT_JSON }}
          SHEET_ID: ${{ secrets.SHEET_ID }}
          SHEET_RANGE: ${{ secrets.SHEET_RANGE }}
          HOLIDAY_COUNTRY: 'KR'
          SEND_MODE: 'auto'
          TEXT_MAX_ROWS: '40'
        run: python scripts/send_sheet.py
